<div >
  <h1><%- plc_name + " " + dataType%> Values</h1>
  <a href="/words">Words</a>
  <a href="/bits">Bits</a>
  <div id="content-main">
    <table  class="table table-condensed table-hover table-striped bootgrid-table" width="60%" cellspacing="0">
   <thead>
      <tr>
        <th>uid</th>
        <th>Name</th>
        <th>Comment</th>
        <th></th>
        <th>Address</th>
        <th>Value</th>
        <th></th>
        <th></th>

      </tr>
   </thead>
   <tbody>
     <!-- Print the values of each variables into a table -->
     <% datas.forEach(function(data) { %>
      <tr>
       <form action="/update/<%-dataType%>" method="post">
        <input type="hidden" name="_uid" value="<%=data._uid%>">
            <td class="deguised-input"><%=data._uid%></td>
            <td><input class="deguised-input" type="text" name="newName" value="<%=data.name%>"></td>
            <td><input class="deguised-input" type="text" name="newComment" value="<%=data.comment%>"></td>
            <td><%=prefix%></td>
            <td><input class="deguised-input" type="text" name="newAddress" value="<%=data.address%>"></td>
            <td><input class="deguised-input" type="text" name="newValue" value="<%=data.value%>"></td>
            
            <!-- Buttons to update and delete a variable -->
            <td><button class="btn btn-primary" type="submit" name="button">Update</button></td>
      </form>
          <form action="/delete/<%-dataType%>" method="post">
              <input type="hidden" name="_uid" value="<%=data._uid%>">
              <td><button class="btn btn-danger" id="delete-<%=data.name%>" type="submit">Delete</button></td>
       </form>
      </tr>
     <% }); %>
     <form action="/add/<%-dataType%>" method="post">
      <!-- TODO: Validation of the form -->
       <tr>
      <td ></td>
       <td ><input type="text" class="form-control" name="name" ></td>
       <td ><input type="text" class="form-control" name="comment" ></td>
       <td><%=prefix%></td>
       <td ><input type="text" class="form-control" name="address" ></td>
       <td ></td>
       <td><button class="btn btn-primary" type="submit" name="button">Add</button></td>
       </tr>
     </form>



   </tbody>

    <br class="clear">
  </div>
</div>
